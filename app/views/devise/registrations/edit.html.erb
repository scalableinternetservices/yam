 <div class="container" style="padding-top: 60px;">

  <h1 class="page-header">Edit <%= resource_name.to_s.humanize %> | <%= @user.gamer_tag %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <!-- left column -->
    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="text-center">
        <%= image_tag("#{@user.profile_image}.jpg") %> 

          <!-- class="avatar img-circle img-thumbnail" alt="avatar"> -->
        <br><br>  
        <div class="form-group">
          <div class="padding">
            <%= f.label :profile_image, class:"control-label"%><br>
            <%= f.select(:profile_image, options_for_select([["Select One", "#{@user.profile_image}"], "Happy", "Unamused", "Smug", "Blush", "Yam"]), {}, {class: "form-control"}) %> 
            <%= @user.profile_image %>
          </div>
        </div>
      </div>
    </div>

    <!-- edit form column -->
    <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
      <h3>Personal info</h3>
      <br><br>
      <form class="form-horizontal" role="form">
        
        <!-- if we want to add first/last name 
        <div class="form-group">
          <label class="col-lg-3 control-label">First name:</label>
          <div class="col-lg-8">
            <input class="form-control" value="Jane" type="text">
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-3 control-label">Last name:</label>
          <div class="col-lg-8">
            <input class="form-control" value="Bishop" type="text">
          </div>
        </div>
        -->

        <div class="form-group">
          <span class="col-lg-3 control-label"><%= f.label :gamer_tag %></span>
          
          <div class="col-lg-8">
            <div class="field">
              <%= f.text_field :gamer_tag, autofocus: true, class:"form-control" %>
            </div>
          </div>

        </div>

        <div class="form-group">
          <span class="col-lg-3 control-label"><%= f.label :email %></span>
          
          <div class="col-lg-8">
            <div class="field">
              <%= f.email_field :email, autocomplete: false, class:"form-control" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>	
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
 	          <% end %>
          </div>

        </div>


       <div class="form-group">
          <%= f.label :current_password, class:"col-md-3 control-label" %>
          <div class="col-md-8">
             <div class="field">
                <%= f.password_field :current_password, autocomplete: "off", class:"form-control"%>
             </div>
          <i>(we need your current password to confirm your changes)</i><br />  
         </div>
       </div>

        <!-- in case we wanted time zone
        <div class="form-group">
          <label class="col-lg-3 control-label">Time Zone:</label>
          <div class="col-lg-8">
            <div class="ui-select">
              <select id="user_time_zone" class="form-control">
                <option value="Hawaii">(GMT-10:00) Hawaii</option>
                <option value="Alaska">(GMT-09:00) Alaska</option>
                <option value="Pacific Time (US &amp; Canada)">(GMT-08:00) Pacific Time (US &amp; Canada)</option>
                <option value="Arizona">(GMT-07:00) Arizona</option>
                <option value="Mountain Time (US &amp; Canada)">(GMT-07:00) Mountain Time (US &amp; Canada)</option>
                <option value="Central Time (US &amp; Canada)" selected="selected">(GMT-06:00) Central Time (US &amp; Canada)</option>
                <option value="Eastern Time (US &amp; Canada)">(GMT-05:00) Eastern Time (US &amp; Canada)</option>
                <option value="Indiana (East)">(GMT-05:00) Indiana (East)</option>
              </select>
            </div>
          </div>
        </div> -->
        
        <div class="form-group">
          <%= f.label :password, class:"col-md-3 control-label" %> <br>

          <div class="col-md-8">
              <div class="field">
    		        <%= f.password_field :password, autocomplete: "off", class:"form-control"%>
                <i>(leave blank if you don't want to change it)</i>
  	           </div>
          </div>
        </div>

        <div class="form-group">
	         <%= f.label :password_confirmation, class:"col-md-3 control-label" %>
           <div class="col-md-8">      
              <div class="field">
               <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>  
    	  	    </div>  
            </div>
        </div>
        <br>
        <br>

       <div class="form-group">
          <%= f.label :description, class:"col-md-3 control-label" %>
          <div class="col-md-8">
             <div class="field">
                <%= f.text_area :description, autocomplete: "off", class:"form-control", rows:"5"%>
             </div> 
         </div>
       </div>

        <div class="form-group">
          <label class="col-md-3 control-label"></label>
          <div class="col-md-8">
                <div class="actions">
 		                <%= f.submit "Update", class:"btn-primary" %>
		                <input class="btn-danger" value="Cancel" type="reset">
  		          </div>
          </div>
        </div>

    </div>

	<% end %>

<div class="col-xs-12"><hr></div>

  <p style="padding: 100px;">
	     <h3>Cancel my account</h3>

	     <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn-warning" %></p>

	     <%= link_to "Back", :back %>
  </p>
  </div>
      




  </div>

</div>
















